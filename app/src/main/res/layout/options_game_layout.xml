<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/DialogsCrawlgeon">

    <TextView
        android:text="@string/efectes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFX"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/fxVolume"
        android:layout_marginTop="165dp"
        android:layout_marginStart="117dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/musicVolume"
        android:layout_weight="1"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/textMusic"
        android:layout_alignStart="@+id/fxVolume"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        android:layout_width="150dp"
        android:progressTint="?android:attr/colorMultiSelectHighlight" />

    <TextView
        android:text="@string/musica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMusic"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/fxVolume"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/fxVolume"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAbout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="83dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="150dp"
        android:layout_marginStart="158dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:progressTint="?android:attr/colorMultiSelectHighlight"
        style="@style/Crawl" />

    <Button
        android:id="@+id/buttonResume"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/resume"
        android:layout_height="50dp"
        android:layout_width="120dp" />

    <TextView
        android:text="PAUSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPause"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp" />

    <Button
        android:layout_height="50dp"
        android:id="@+id/buttonLeave"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/exit"
        android:layout_width="120dp" />

</android.support.constraint.ConstraintLayout>
