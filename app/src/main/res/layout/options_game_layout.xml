<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/DialogsCrawlgeon">

    <GridLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:columnCount="3"
        android:rowCount="8"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <SeekBar
            android:id="@+id/fxVolume"
            style="@style/Crawl"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonAbout"
            android:layout_alignParentEnd="true"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="1"
            android:paddingBottom="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_bar"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="160dp" />

        <TextView
            android:text="@string/efectes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFX"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="165dp"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:text="@string/musica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMusic"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="94dp"
            tools:layout_editor_absoluteX="89dp"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="40dp" />

        <SeekBar
            android:id="@+id/musicVolume"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fxVolume"
            android:layout_below="@+id/textMusic"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_bar"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:text="PAUSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPause"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="53dp"
            tools:layout_editor_absoluteX="16dp"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="16dp" />

        <Button
            android:layout_height="50dp"
            android:id="@+id/buttonLeave"
            android:background="@drawable/exit"
            android:layout_width="120dp"
            tools:layout_editor_absoluteY="280dp"
            tools:layout_editor_absoluteX="224dp"
            android:layout_row="7"
            android:layout_column="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/buttonResume"
            android:background="@drawable/resume"
            android:layout_height="50dp"
            android:layout_width="120dp"
            tools:layout_editor_absoluteY="210dp"
            tools:layout_editor_absoluteX="16dp"
            android:layout_row="5"
            android:layout_column="1"
            android:paddingBottom="16dp"
            android:paddingTop="32dp"
            android:layout_marginRight="8dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
