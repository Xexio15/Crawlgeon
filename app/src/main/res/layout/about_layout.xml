<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dungeonselect">

    <Button
        android:id="@+id/botoBack"
        android:background="@drawable/atras"
        android:layout_width="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="40dp"
        android:minWidth="40dp"
        android:minHeight="40dp" />

    <TextView
        android:text="@string/version"
        android:layout_width="193dp"
        android:layout_height="28dp"
        android:id="@+id/textAbout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="112dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp" />

    <TextView
        android:text="@string/agradecimientos"
        android:layout_width="308dp"
        android:layout_height="329dp"
        android:id="@+id/agradecimientos"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="152dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:textSize="14sp" />

    <TextView
        android:text="Crawlgeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAbout2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="64dp"
        android:textSize="18sp" />

    <TextView
        android:text="A game created by:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAbout3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp" />

    <Button
        android:text="Delete Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/borrarDatos"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"
        android:visibility="invisible" />
</android.support.constraint.ConstraintLayout>