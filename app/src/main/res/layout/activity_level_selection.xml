<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dungeon_select_bg"
    tools:context="com.example.splansac7alumnes.crawlgeon.LevelSelection">

    <Button
        android:id="@+id/buttonOptions"
        android:minWidth="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/configuracio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:minHeight="40dp" />

    <Button
        android:layout_width="40dp"
        android:id="@+id/buttonLvlSelToDungSel"
        android:minWidth="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:background="@drawable/atras" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="488dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.84000003"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn_01x01"
            android:background="@drawable/lvl1_basic_dungeon"
            android:layout_marginStart="12dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_width="141dp"
            android:layout_height="55dp" />

        <ImageView
            android:layout_width="35dp"
            app:srcCompat="@drawable/star"
            android:id="@+id/imageView3"
            android:layout_height="35dp"
            android:layout_marginStart="55dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_01x01"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp" />

        <ImageView
            android:layout_width="35dp"
            app:srcCompat="@drawable/emptystar"
            android:id="@+id/imageView9"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp" />

        <ImageView
            android:layout_width="35dp"
            app:srcCompat="@drawable/emptystar"
            android:id="@+id/imageView10"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
