<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.splansac7alumnes.crawlgeon.LevelSelection">

    <Button
        android:id="@+id/buttonOptions"
        android:minWidth="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/configuracio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:minHeight="40dp" />

    <Button
        android:layout_width="40dp"
        android:id="@+id/buttonLvlSelToDungSel"
        android:minWidth="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:background="@drawable/atras" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="488dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="12dp">

        <TextView
            android:text="TextView"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:text="TextView"
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
