<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/DialogsCrawlgeon">

    <GridLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:columnCount="3"
        android:rowCount="4"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/musicVolume"
            android:layout_weight="1"
            android:layout_below="@+id/textMusic"
            android:layout_alignStart="@+id/fxVolume"
            android:layout_width="150dp"
            android:progressTint="?android:attr/colorMultiSelectHighlight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.72"
            app:layout_constraintVertical_bias="0.17000002"
            android:progressDrawable="@drawable/seek_bar"
            android:scrollbarThumbHorizontal="@drawable/seek_bar"
            android:scrollbarThumbVertical="@drawable/seek_bar"
            android:thumb="@drawable/seek_bar"
            android:indeterminateDrawable="@drawable/seek_bar"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="32dp" />

        <TextView
            android:text="@string/musica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMusic"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.18"
            android:layout_marginStart="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingTop="32dp" />

        <SeekBar
            android:id="@+id/fxVolume"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonAbout"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:progressTint="?android:attr/colorMultiSelectHighlight"
            style="@style/Crawl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.72"
            app:layout_constraintVertical_bias="0.31"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/seek_bar"
            android:scrollbarThumbHorizontal="@drawable/seek_bar"
            android:scrollbarThumbVertical="@drawable/seek_bar"
            android:thumb="@drawable/seek_bar" />

        <Button
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:id="@+id/buttonAbout"
            android:background="@drawable/about"
            android:layout_weight="1"
            android:layout_below="@+id/fxVolume"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.75"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:text="@string/efectes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFX"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.32999998"
            android:layout_marginStart="40dp"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
