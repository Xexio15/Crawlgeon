<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dungeon_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.splansac7alumnes.crawlgeon.DungeonSelection"
    android:background="@drawable/dungeon_select_bg">

    <Button
        android:id="@+id/buttonOptions"
        android:minWidth="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/configuracio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:minHeight="40dp" />

    <Button
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:id="@+id/buttonEquip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="144dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/boto_equip"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="40dp"
        android:id="@+id/buttonSelToMen"
        android:minWidth="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:background="@drawable/atras"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="OPEN THE DOOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClick"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquip"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0.36"
        android:fillViewport="true"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="264dp">

                <TextView
                    android:text="0/10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLvlsCompleteDng1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toTopOf="@+id/buttonDungeon1"
                    android:textSize="36sp"
                    android:layout_weight="1.45"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/buttonDungeon1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/puerta1"
                    android:layout_height="243dp"
                    app:layout_constraintVertical_bias="0.47000003"
                    android:layout_width="200dp"
                    android:alpha="1"
                    android:layout_weight="1"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="wrap_content">

                <TextView
                    android:text="0/10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLvlsCompleteDng2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@android:color/background_light"
                    app:layout_constraintBottom_toTopOf="@+id/buttonDungeon1"
                    android:textSize="36sp"
                    android:layout_weight="1.45"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/buttonDungeon2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/puerta2"
                    android:layout_height="243dp"
                    app:layout_constraintVertical_bias="0.47000003"
                    android:layout_width="200dp"
                    android:alpha="1"
                    android:layout_weight="1.45"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
