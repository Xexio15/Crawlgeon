<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dungeon_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.splansac7alumnes.crawlgeon.DungeonSelection">

    <Button
        android:text="@string/opciones"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOptions"
        android:minWidth="48dip"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="@string/equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEquip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="86dp"
        android:layout_marginStart="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="144dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="@string/atras"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:id="@+id/buttonSelToMen"
        android:minWidth="48dip"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="X/Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLvlsComplete"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquip"
        android:layout_marginBottom="288dp"
        android:layout_marginStart="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="160dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="Dungeon 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDungeon"
        app:layout_constraintBottom_toTopOf="@+id/buttonEquip"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textLvlsComplete"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
