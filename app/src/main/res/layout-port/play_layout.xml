<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dungeon_select_bg">


    <Button
        android:text="WIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWin"
        android:layout_marginStart="152dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="LOSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLose"
        android:layout_marginEnd="144dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Tiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiles"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textocualquiera"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/background_light" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="116dp"
        android:layout_height="18dp"
        android:id="@+id/barraVidaEnemiga"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        android:progressTint="@android:color/holo_red_dark"
        android:progress="50"
        android:progressDrawable="@drawable/progreso_baar"
        android:progressBackgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/tablero"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="116dp"
        android:layout_height="18dp"
        android:id="@+id/barraVidaPJ"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        android:progressTint="@android:color/holo_red_dark"
        android:progress="50"
        android:progressDrawable="@drawable/progreso_baar"
        android:progressBackgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/tablero"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ProgressBar
        android:id="@+id/barraArmorPJ"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="116dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:progress="50"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressDrawable="@drawable/armor_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vidaPJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="100"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/barraVidaPJ"
        app:layout_constraintBottom_toBottomOf="@+id/barraVidaPJ"
        app:layout_constraintLeft_toLeftOf="@+id/barraVidaPJ"
        app:layout_constraintRight_toRightOf="@+id/barraVidaPJ"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/vidaEnemigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/barraVidaEnemiga"
        app:layout_constraintBottom_toBottomOf="@+id/barraVidaEnemiga"
        app:layout_constraintLeft_toLeftOf="@+id/barraVidaEnemiga"
        app:layout_constraintRight_toRightOf="@+id/barraVidaEnemiga"
        android:fontFamily="" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imAnim"
        app:layout_constraintBottom_toBottomOf="@+id/tablero"
        app:layout_constraintTop_toTopOf="@+id/tablero"
        app:layout_constraintRight_toRightOf="@+id/tablero"
        app:layout_constraintLeft_toLeftOf="@+id/tablero" />

    <GridView
        android:id="@+id/tablero"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        app:srcCompat="@android:color/transparent"
        android:id="@+id/pjImg"
        app:layout_constraintBottom_toTopOf="@+id/vidaPJ"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:layout_height="75dp"
        android:layout_width="75dp" />

    <ImageView
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imgEnemy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vidaEnemigo"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/armorPJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="100"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/barraArmorPJ"
        app:layout_constraintBottom_toBottomOf="@+id/barraArmorPJ"
        app:layout_constraintLeft_toLeftOf="@+id/barraArmorPJ"
        app:layout_constraintRight_toRightOf="@+id/barraArmorPJ"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>